<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="css/edit-styles.css">
  <script src="https://cdn.tiny.cloud/1/nlobzujmgdbsb2ndwdqcf5ks7rdac8ua4yi9wexbvc3w930f/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/navlapstyles.css">
  <title>LAP decision tree</title>
</head>

<body>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">  <!-- aggiunto per evitare lo zoom sui display piccoli -->
  <div class="container">

    <h4>LAP Decision Tree Navigator</h4>

<%    if (nodo.title == undefined) {nodo.title = "  ...  "}; %>
    <h2 class="titolo"><%- nodo.title %></h2>

<%    if (nodo.question == undefined) {nodo.question = "Final node"}; %>
    <h2 class="question"> <%- nodo.question %></h2>
    <div class="content">
      <%- nodo.content %>
    </div>

    <%    if (notFound) { %>
    <script type="text/javascript">
      alert("Node not found")
    </script>
    <% } %>


    <div class="container">
      <form action="/change-node" method="post">
        <%    if (nodo.answer1) { %>
        <button type="submit" name="button" value="1" class="answers btn btn.lg btn-primary"><%- nodo.answer1 %></button>
        <%    }; %>
        <%    if (nodo.answer2) { %>
        <button type="submit" name="button" value="2" class="answers btn btn.lg btn-primary"><%- nodo.answer2 %></button>
        <%    }; %>
        <%    if (nodo.answer3) {  %>
        <button type="submit" name="button" value="3" class="answers btn btn.lg btn-primary"><%- nodo.answer3 %></button>
        <%     }; %>
        <%    if (nodo.answer4) {  %>
        <button type="submit" name="button" value="4" class="answers btn btn.lg btn-primary"><%- nodo.answer4 %></button>
        <%     }; %>
        <%    if (nodo.answer5) {  %>
        <button type="submit" name="button" value="5" class="answers btn btn.lg btn-primary"><%- nodo.answer5 %></button>
        <%     }; %>
        <%    if (nodo.answer6) {  %>
        <button type="submit" name="button" value="6" class="answers btn btn.lg btn-primary"><%- nodo.answer6 %></button>
        <%     }; %>
      </form>
    </div>
<hr>
<div class="container">
  <form action="/ctrl-buttons" method="post">
    <button type="submit" name="ctrlbutton" value="back" class="ctrlbuttons btn btn.lg btn-secondary">Back</button>
    <button type="submit" name="ctrlbutton" value="restart" class="ctrlbuttons btn btn.lg btn-secondary">Restart</button>
    <button type="submit" name="ctrlbutton" value="reference" class="ctrlbuttons btn btn.lg btn-secondary">Reference Data</button>
  </form>

</div>





    History: <%= history %> <br>
    NxNodes:

    <%- nodo.nextNode1 %>
    <%- nodo.nextNode2 %>
    <%- nodo.nextNode3 %>
    <%- nodo.nextNode4 %>
    <%- nodo.nextNode5 %>
    <%- nodo.nextNode6 %>

  </div>
</body>
